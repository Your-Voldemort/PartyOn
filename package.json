{
  "name": "audio-streamer-client",
  "version": "1.0.0",
  "description": "Audio Streamer client-side testing",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "fast-check": "^3.14.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": ["js"],
    "testMatch": [
      "**/tests/javascript/**/*.test.js",
      "**/tests/javascript/**/*.property.test.js"
    ],
    "collectCoverageFrom": [
      "static/js/**/*.js"
    ]
  },
  "babel": {
    "presets": [
      ["@babel/preset-env", { "targets": { "node": "current" } }]
    ]
  }
}
